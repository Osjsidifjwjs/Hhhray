--// FunÃ§Ã£o para criar cantos
local function CreateCorner(parent, radius)
    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, radius or 0)
    corner.Parent = parent
end

--// FunÃ§Ã£o para criar gradiente
local function CreateGradient(parent)
    local gradient = Instance.new("UIGradient")
    gradient.Color = ColorSequence.new{
        ColorSequenceKeypoint.new(0, Color3.fromRGB(40, 10, 10)),
        ColorSequenceKeypoint.new(1, Color3.fromRGB(15, 5, 5))
    }
    gradient.Rotation = 45
    gradient.Parent = parent
    return gradient
end

--// FunÃ§Ã£o para criar borda RGB animada
local function CreateRGBBorder(parent)
    local stroke = Instance.new("UIStroke")
    stroke.Thickness = 1.5
    stroke.Color = Color3.fromRGB(255, 0, 0)
    stroke.Parent = parent

    task.spawn(function()
        local t = 0
        while parent and parent.Parent do
            t = t + 0.02
            local red = math.floor(127.5 + 127.5 * math.sin(t))
            stroke.Color = Color3.fromRGB(red, 0, 0)
            task.wait(0.03)
        end
    end)

    return stroke
end

